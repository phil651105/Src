@{
    string invalid_title = ViewBag.invalid_title as string;
    string invalid_info = ViewBag.invalid_info as string;
    string common_more_experiences = ViewBag.common_more_experiences as string;
}

@section Scripts{
    <link rel="stylesheet" href="@Url.Content("~/css/animate.css")" type="text/css" />
    <script type="text/javascript">
        $(function () {
            var errMsg = '@ViewBag.error_alert';
            if(errMsg.length > 0) { $('#alert_title').html(errMsg); $('#alert').show(); }
            $('.close').on('click', function() { $('#alert').hide(); });
        });
    </script>
}

<section class="wrapper" id="invalidProductApp">
    <div class="container">
        <div class="empty-list">
            <div class="none-title">
                <img src="@Url.Content("/images/empty_state/product_detail.svg")">
                <h3> @invalid_title </h3>
                <p class="none-hint"> @invalid_info </p>
            </div>
        </div>
    </div>
</section>

@*<div id="alert" class="alert alert-kkday-danger animated ">asdasdadasadads alert</div>*@


<div id="alert" data-growl="container" class="alert alert-kkday-danger growl-animated animated flipInY" role="alert" data-growl-position="top-center" style="position: fixed; margin: 0px 0px 0px -432px; z-index: 1031; display: none; top: 20px; left: 50%;">
    <button type="button" class="close" data-growl="dismiss" style="display: inline-block; position: absolute; top: 5px; right: 10px; z-index: 1030;">
        <span aria-hidden="true">×</span>
        <span class="sr-only">Close</span>
    </button>
    <span data-growl="icon"></span>
    <span data-growl="title">
        <strong id="alert_title"></strong><br>
    </span>
    <span data-growl="message" id="alert_msg">
        @*message*@
    </span><a href="#" data-growl="url"></a>
</div>